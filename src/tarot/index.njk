---
layout: baseLayout
---
<h2>Tarot cards</h2>
<section class="cards">
    {%- for card in tarotCards %}
        <div class="card-wrapper"
             style="--background-color: {{ card.burnColor.css.background }}; --border-color: {{ card.burnColor.css.border }}">
            <div class="card">
                <h3>{{ card.name }}</h3>
                <p>{{ card.drawChanceOneInX }} ({{ card.drawChancePct }}%)</p>
                <p>{{ card.effect }}</p>
                {% if card.notes.length > 0 %}
                    <details>
                        <summary>Notes</summary>
                        <ul>
                            {% for note in card.notes %}
                                <li>{{ note }}</li>
                            {% endfor %}
                        </ul>
                    </details>
                {% endif %}
            </div>
        </div>
    {% endfor -%}
</section>