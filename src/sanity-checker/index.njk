---
layout: baseLayout
---
<h2>Sanity Checker</h2>
<h3>Starting sanity thresholds</h3>
<ul>
{% for sanity in sanityCollections.sanityStartingSortDesc %}
    <li>
        {{ sanity.sanityNum }}
        {%- if sanity.sanityNum !== 'Varies' %}%{% endif %}:
        <ul class="ghost-list-inline">
            {% for ghost in sanity.ghosts %}
                <li>
                {% renderTemplate "webc", ghost %}
                <ghost-link :@name="name"></ghost-link>
                {% endrenderTemplate %}
                </li>
            {% endfor %}
        </ul>
    </li>
{% endfor %}
</ul>
<h3>Super sanity thresholds</h3>
<ul>
{% for sanity in sanityCollections.sanitySuperSortDesc %}
    <li>
        {{ sanity.sanityNum }}%:
        <ul>
            {% for superPair in sanity.superPairs %}
                <li>
                    {% renderTemplate "webc", superPair %}
                    <ghost-link :@name="ghost"></ghost-link>
                    {% endrenderTemplate %}
                    ({{ superPair.condition }})
                </li>
            {% endfor %}
        </ul>
    </li>
{% endfor %}
</ul>